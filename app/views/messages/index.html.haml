.contents
  .contents__left
    = render 'shared/side_bar'
  .contents__right
    .contents__right__up
      .contents__right__up__group
        testgroup
      .contents__right__up__member
        member:testuser
      %input{:type => "submit" , :class => "contents__right__up__edit" , :value => "Edit"}
    .contents__right__mid
      = render @messages
    .contents__right__down
      = form_for [@group, @message] do |f|
        .contents__right__down__form
          = f.text_field :content, class: 'contents__right__down__form__input-box', placeholder: 'type a message' 
          = f.label :image, class: 'contents__right__down__form__label' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'contents__right__down__form__label__file'
          = f.submit 'Send', class: 'contents__right__down__form__send' 